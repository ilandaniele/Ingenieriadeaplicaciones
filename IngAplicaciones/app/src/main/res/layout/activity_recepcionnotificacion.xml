<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.ingaplicaciones.RecepcionNotificacion"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textV_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Texto del titulo de la notificacion"

        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textV_contenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Texto del contenido de la notificacion"

        android:textSize="20sp" />

    <TextView
        android:id="@+id/textV_subtexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Subtexto de la notificacion"
        android:textSize="20sp" />

    <Button
        android:id="@+id/boton_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:hint="Ir a la aplicaciÃ³n" />
</LinearLayout>
